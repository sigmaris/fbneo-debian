# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# See issue #2 in github (libretro/libretro-fba)
CFLAGS=-Wno-error
CXXFLAGS=-Wno-error

ARCH=$(shell dpkg-architecture -qDEB_HOST_ARCH)

ifeq ($(ARCH),armhf)
	# performance profile is for CPS-3
	ARM=platform="armv hardfloat" profile=performance
endif

%:
	dh $@ --parallel

override_dh_auto_build:
	$(MAKE) -f makefile.libretro $(ARM)
	$(MAKE) -C fba-libretro_old/svn-current/trunk/fbacores/cps2/ -f makefile.libretro $(ARM)
	$(MAKE) -C fba-libretro_old/svn-current/trunk/fbacores/neogeo/ -f makefile.libretro $(ARM)
	$(MAKE) -C fba-libretro_old/svn-current/trunk/fbacores/cps1/ -f makefile.libretro $(ARM)

override_dh_auto_install:
	# fba new port
	cp *.so debian/libretro-fba/usr/lib/libretro/
	# cps1
	cp fba-libretro_old/svn-current/trunk/fbacores/cps1/*.so debian/libretro-fba-cps1/usr/lib/libretro/
	# cps2
	cp fba-libretro_old/svn-current/trunk/fbacores/cps2/*.so debian/libretro-fba-cps2/usr/lib/libretro/
	# neogeo
	cp fba-libretro_old/svn-current/trunk/fbacores/neogeo/*.so debian/libretro-fba-neogeo/usr/lib/libretro/

override_dh_auto_clean:
	$(MAKE) -f makefile.libretro clean
	$(MAKE) -C fba-libretro_old/svn-current/trunk/fbacores/cps2/ -f makefile.libretro clean
	$(MAKE) -C fba-libretro_old/svn-current/trunk/fbacores/neogeo/ -f makefile.libretro clean
	$(MAKE) -C fba-libretro_old/svn-current/trunk/fbacores/cps1/ -f makefile.libretro clean
